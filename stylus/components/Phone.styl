[data-component='Phone'] {
	position: relative;
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
	overflow: hidden;

	TransitionAppear(1s);

	> header {
		flex: 0 0 auto;
		width: 100%;
		box-shadow: 0px 0px 15px 0px rgba(#000, 0.9);

		> .topbar {
			padding: 10px 20px;
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
			background-color: #000;
			color: #fff;
		}
	}
}
