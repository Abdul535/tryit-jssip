[data-component='Session'] {
	position: relative;
	flex: 100 0 auto;
	overflow: hidden;

	TransitionAppear(1s);

	video.remote-video {
		position: absolute;
		z-index: 100;
		width: 100%;
		height: 100%;
		left: 0;
		top: 0;
		object-fit: cover;
	}

	video.local-video {
		position: absolute;
		z-index: 200;
		width: 22%;
		left: 15px;
		top: 15px;
		object-fit: cover;
		transform: scaleX(-1);
		border: 1px solid rgba(#fff, 0.75);
		box-shadow: 0px 0px 15px 0px rgba(#000, 0.9);
	}
}
