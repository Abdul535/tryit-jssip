[data-component='Login'] {
	height: 100%;
	width: 100%;

	TransitionAppear();

	+desktop() {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}

	+mobile() {
		padding: 10px;
		overflow: auto;
	}

	> .logo-container {
		+desktop() {
			margin: 30px auto;
		}

		+mobile() {
			display: table;
			margin: 20px auto;
		}
	}

	> .main-container {
		background-color: rgba(#fff, 0.9);
		border-radius: 4px;
		box-shadow: 0px 0px 15px 0px rgba(#000, 0.9);

		+desktop() {
			flex: 0 0 auto;
			padding: 30px;
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;
		}

		+mobile() {
			display: table;
			margin: auto;
			padding: 10px 40px 40px 40px;
		}

		> .form-container {
			+desktop() {
				width: 300px;
				flex: 0 0 auto;
				margin-right: 20px;
				margin-bottom: 30px;
			}

			+mobile() {
				width: 200px;
				margin: auto;
				margin-bottom: 40px;
			}
		}

		> .photomaton-container {
			+desktop() {
				width: 300px;
				height: 300px;
				flex: 0 0 auto;
				margin-left: 20px;
			}

			+mobile() {
				width: 200px;
				height: 200px;
				margin: auto;
				margin-top: 40px;
			}
		}
	}

	> .play-container {
		flex: 0 0 auto;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;

		+desktop() {
			margin: 40px auto;
			width: 80px;
			height: 80px;
		}

		+mobile() {
			margin: 20px auto;
			width: 60px;
			height: 60px;
		}

		> .play-button {
			width: 100%;
			height: 100%;
			background-image: url('/resources/images/play.svg');
			background-position: center;
			background-size: cover;
			background-repeat: no-repeat;
			background-size: 100%;
			cursor: pointer;
			transition-property: opacity transform;
			transition-duration: 0.5s;

			&.disabled {
				opacity: 0.25;
				pointer-events: none;
			}

			&:hover {
				opacity: 0.9;
				transform: rotateZ(360deg);
				transform: scale(1.2);
			}
		}
	}
}
