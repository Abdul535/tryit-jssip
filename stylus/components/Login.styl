[data-component='Login'] {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;

	TransitionAppear();

	> .logo-container {
		margin: 20px auto;
	}

	> form {
		flex: 0 0 auto;
		min-height: 200px;
		width: 300px;
		margin: 50px auto;
		background-color: rgba(#fff, 0.9);
		border-radius: 4px;
		box-shadow: 0px 0px 15px 0px rgba(#000, 0.9);
		padding: 30px;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}

	> .submit-container {
		flex: 0 0 auto;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		margin: 20px auto;

		+desktop() {
			width: 80px;
			height: 80px;
		}

		+mobile() {
			width: 60px;
			height: 60px;
		}

		> .submit-button {
			width: 100%;
			height: 100%;
			background-image: url('resources/images/submit-button.svg');
			background-position: center;
			background-size: cover;
			background-repeat: no-repeat;
			background-size: 100%;
			cursor: pointer;
			transition-property: opacity transform;
			transition-duration: 0.5s;

			&.disabled {
				opacity: 0.25;
				pointer-events: none;
			}

			&:hover {
				opacity: 0.9;
				transform: rotateZ(360deg);
				transform: scale(1.2);
			}
		}
	}
}
